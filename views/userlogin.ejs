<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/64d58efce2.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" type="text/css" href="/css/userlogin.css" />
    <title>Login Form</title>
  </head>
  <body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form id="userlogin" class="sign-in-form">
            <img src="/images/IMClogo.png" width="30%" height="20%">
            <h2 class="title">User Login</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="username" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="employeeID" placeholder="Employee ID" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" onclick="togglePasswordVisibility()"/>
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="otp" placeholder="OTP" />
            </div>
            <div class="otp-buttons">
              <button type="button" class="btn small-btn" onclick="sendOTP()">Send OTP</button>
              <button type="button" class="btn small-btn" onclick="resendOTP()">Resend OTP</button>
            </div>
            <input type="submit" value="Login" class="btn solid"  onclick="submituserForm(event)"/>
          </form>

          <form id="adminlogin" class="sign-up-form">
            <img src="/images/IMClogo.png" width="30%" height="20%">
            <h2 class="title">Admin Login</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="username" placeholder="Username" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="employeeID" placeholder="Employee ID" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" onclick="togglePasswordVisibility()" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="otp" placeholder="OTP" />
            </div>
            <div class="otp-buttons">
              <button type="button" class="btn small-btn" onclick="sendOTP()">Send OTP</button>
              <button type="button" class="btn small-btn" onclick="resendOTP()">Resend OTP</button>
            </div>
            <input type="submit" class="btn" value="Login" onclick="submitadminForm()" />
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>Not a user ?</h3>
            <button class="btn transparent" id="sign-up-btn">
              Login as Admin
            </button>
          </div>
          <img src="/images/G20.png" class="image" alt="" />
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <button class="btn transparent" id="sign-in-btn">
              Login as a User
            </button>
          </div>
          <img src="/images/G20.png" class="image" alt="" />
        </div>
      </div>
    </div>

    <script src="/js/userlogin.js"></script>
  </body>
</html>
